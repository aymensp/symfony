{% extends './Default/dashboard.html.twig' %}

{% block title %}
    Edit an event
{% endblock %}

{% block body %}
    {{ form_start(form) }}

    <div class="row">
        <div class="col-md-6">
            <h1><b>  Edit an event
                </b></h1>
        </div>
        <div class="col-md-6 text-right">
            <br>
            <button type="submit" class="btn btn-success" value="Create"data-toggle="modal" data-target="#myModal">
                <i class="fa fa-check" aria-hidden="true"></i>Save
            </button>
            <a href="{{ path('ajoutevent') }}" class="btn btn-secondary">
                <i class="fa fa-undo" aria-hidden="true"></i>back to the list</a>

            <br>
        </div>
    </div>

    {% form_theme form 'bootstrap_3_layout.html.twig' %}
    {{ form_widget(form) }}
    {{ form_end(form) }}


    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
         aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">
                    </h5>
                </div>
                <div class="modal-body">
                    Are you sure you want to edit this event?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default btn-secondary" data-dismiss="modal"> Cancel
                    </button>
                    <a href="">
                        <input class="btn btn-danger btn_lg" type="submit" value="Save">
                    </a>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
