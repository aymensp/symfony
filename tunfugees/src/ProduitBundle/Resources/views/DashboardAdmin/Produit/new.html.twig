{% extends './Default/dashboard.html.twig' %}

{% block title %}
    Ajout du produit ou Categorie
{% endblock %}
{% block javascripts %}
{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-6">
                    <h1><b>Ajout du produit ou Categorie </b></h1>
                </div>
                <div class="col-md-6 text-right"><br>
                    <a href="{{ path('da_annonce_index') }}" class="btn btn-secondary">
                        <i class="fa fa-undo" aria-hidden="true"></i>  Retour Ã  la liste</a>
                    <br>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="card card-borderless">
                        <ul class="nav nav-tabs nav-tabs-simple hidden-sm-down" role="tablist"
                            data-init-reponsive-tabs="dropdownfx">
                            <li class="nav-item">
                                <a class="active" data-toggle="tab" role="tab" data-target="#annonce" href="#"
                                   aria-expanded="true">Produit</a>
                            </li>
                            <li class="nav-item">
                                <a href="#" data-toggle="tab" role="tab" data-target="#categorie" class=""
                                   aria-expanded="false">Categorie</a>
                            </li>
                        </ul>
                        <div class="tab-content">
                            <div class="tab-pane active" id="annonce" aria-expanded="true">
                                {{ form_start(formAnnonce) }}
                                {% form_theme formAnnonce 'bootstrap_3_layout.html.twig' %}
                                {{ form_widget(formAnnonce) }}

                                <div>
                                    <img src="" id="image" style="display: none" width="100px"height="100px">
                                </div>
                                <button type="submit" class="btn btn-success" value="Create">
                                    <i class="fa fa-check" aria-hidden="true"></i> Confirmer
                                </button>
                                {{ form_end(formAnnonce) }}
                            </div>
                            <div class="tab-pane" id="categorie" aria-expanded="false">
                                {{ form_start(formCatAnn) }}
                                {% form_theme formCatAnn 'bootstrap_3_layout.html.twig' %}
                                {{ form_widget(formCatAnn) }}
                                <button type="submit" class="btn btn-success" value="Create">
                                    <i class="fa fa-check" aria-hidden="true"></i> Confirmer
                                </button>
                                {{ form_end(formCatAnn) }}
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}