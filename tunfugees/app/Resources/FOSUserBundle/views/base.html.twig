            {#{{ dump(currentPath) }}#}
            <ul class="menu-items">
                <li class="m-t-30 ">
                    <a href="{{ path('poste_index') }}" class="detailed">
                        <span class="title">Postes</span>
                    </a>
                    <span class="{% if path('poste_index') == currentPath %}bg-success{% endif %} icon-thumbnail"><i class="pg-home"></i></span>
                </li>
                <li class="">
                    <a href="{{ path('profile_index') }}" class="detailed">
                        <span class="title">Profils</span>
                    </a>
                    <span class="{% if path('profile_index') == currentPath %}bg-success{% endif %} icon-thumbnail">Pr</span>
                </li>
                <li class="">
                    <a href="{{ path('candidature_index') }}" class="detailed">
                        <span class="title">Candidatures</span>
                    </a>
                    <span class="{% if path('candidature_index') == currentPath %}bg-success{% endif %} icon-thumbnail">C</span>
                </li>

                {% if is_granted('ROLE_ADMIN') %}    
                    <li class="">
                        <a href="{{ path('etape_index') }}">
                            <span class="title">Etats</span>
                        </a>
                        <span class="{% if path('etape_index') == currentPath %}bg-success{% endif %} icon-thumbnail">E</span>
                    </li>
                    <li class="">
                        <a href="{{ path('group_index') }}">
                            <span class="title">Sociétés</span>
                        </a>
                        <span class=" icon-thumbnail">S</span>
                    </li>
                    <li class="">
                        <a href="{{ path('users_index') }}">
                            <span class="title">Utilisateur</span>
                        </a>
                        <span class=" icon-thumbnail">Reg</span>
                    </li>
                {% endif %}
