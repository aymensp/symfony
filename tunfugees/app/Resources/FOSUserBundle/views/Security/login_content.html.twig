<div class="fixed-header pgn-wrapper" data-position="top">
    {% if error %}
    <div class="pgn push-on-sidebar-open pgn-bar">
        <div class="alert alert-danger">
            <div class="container">
                <span>
                    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                </span>
                <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">Ã—</span><span
                            class="sr-only">Close</span></button>
            </div>
        </div>
    </div>
    {% endif %}
</div>

<div class="login-wrapper ">
    <div class="bg-pic" style="background-color: #0f6046;">
        <img src="{{ asset('assets/img/logofinalev2.png') }}"
             style="width: 900px;height: 500px;"
             class="lazy">
    </div>

    <div class="login-container bg-white">
        <div class="p-l-50 m-l-20 p-r-50 m-r-20 p-t-50 m-t-30 sm-p-l-15 sm-p-r-15 sm-p-t-40">
            <img src="{{ asset('assets/img/AI CONECTPTION 2.png') }}" alt="logo" width="300" height="150">
            <p class="p-t-35">Connectez-vous</p>


            <form action="{{ path("fos_user_security_check") }}" method="post" class="p-t-15">

                {% if csrf_token %}
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
                {% endif %}

                <div class="form-group form-group-default">
                    <label for="username">Pseudo</label>
                    <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control"
                           required="required"/>
                </div>
                <div class="form-group form-group-default">
                    <label for="password">Mot de passe</label>
                    <input type="password" class="form-control" id="password" name="_password" required="required"/>
                </div>
                <div class="row">
                    <div class="col-md-6 no-padding">
                        <div class="checkbox ">
                            <input type="checkbox" id="remember_me" name="_remember_me" value="on"/>
                            <label for="remember_me">Se souvenir de moi</label>
                        </div>
                    </div>
                </div>
                <input type="submit" class="btn btn-primary btn-cons m-t-10" id="_submit" name="_submit"
                       value="Se connecter"/>
            </form>


        </div>
    </div>
</div>
<div class="overlay hide" data-pages="search">
    <div class="overlay-content has-results m-t-20">
        <div class="container-fluid">
            <img class="overlay-brand" src="{{ asset('assets/img/waller.png') }}" alt="logo"
                 data-src="{{ asset('assets/img/waller.png') }}"
                 data-src-retina="{{ asset('assets/img/waller.png') }}" width="78" height="22">
            <a href="#" class="close-icon-light overlay-close text-black fs-16">
                <i class="pg-close"></i>
            </a>
        </div>
    </div>
</div>

